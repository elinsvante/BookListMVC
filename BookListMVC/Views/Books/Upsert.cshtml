@model BookListMVC.Models.Book

<br />
<!--If id == 0 show Edit else show Create-->
<h2 class="text-info">@(Model.Id != 0 ? "Edit" : "Create")Book</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        @if (Model.Id != 0)
        {
            <!--To find Book OnPost with the Book Id when updating.-->
            <input type="hidden" asp-for="Id" />
        }

        <!--Validation for correct input-->
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <!--Three input rows-->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <!--Input Controller-->
                <input asp-for="Name" class="form-control"/>
            </div>
            <!--Validation for correct input-->
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Author" class="form-control"/>
            </div>
            <!--Validation for input-->
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="ISBN" class="form-control"/>
            </div>
            <!--Validation for input-->
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <!--Switch between button Update or Create-->
                <button type="submit" class="btn btn-primary form-control"> 
                    @(Model.Id != 0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

<!--For validation on client-side-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

